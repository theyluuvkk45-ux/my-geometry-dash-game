{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2022",
		"jsx": "react",
		"allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strict": true,
		"checkJs": true,
		"strictPropertyInitialization": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"../common/*",
		"./*"
	]
}